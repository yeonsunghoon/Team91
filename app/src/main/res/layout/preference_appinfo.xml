<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/infoApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ddd"
        android:gravity="center_horizontal"
        android:text="앱 정보"
        android:textSize="30dp" />

    <ImageView
        android:id="@+id/infoImg"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/infoApp"
        android:layout_margin="30dp"
        android:src="@mipmap/ic_launcher" />

    <!-- TODO: 레이아웃 조정 -->
    <TextView
        android:id="@+id/infoTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/infoApp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@id/infoImg"
        android:text="현재 버전 v.1.0.0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/infoTxt"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/infoImg"
        android:text="최신 버전 v.1.0.0" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/infoImg"
        android:text="현재 최신 버전입니다." />
</RelativeLayout>